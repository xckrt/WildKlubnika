<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Изображение продукта -->
    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Цена продукта -->
        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 ₽"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Название продавца и товара -->
        <TextView
            android:id="@+id/cart_product_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продавец: Иванов"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название товара"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Информация о складе -->
        <TextView
            android:id="@+id/cart_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Склад: Москва"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Контроль количества -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/cart_minus_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cart_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="1"
                android:textSize="14sp"
                android:gravity="center" />

            <Button
                android:id="@+id/cart_plus_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Тулбар для действий -->
    <ImageButton
        android:id="@+id/cart_toolbar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/tochki"
        android:layout_gravity="top"
        android:layout_marginStart="8dp" />
</LinearLayout>
